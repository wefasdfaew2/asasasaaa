@mixin bg-img{ background: url(../images/tournament-bg.png) no-repeat 50% 360px fixed;}
@mixin header-menu-bg{
	background: #e63a35;
	background: -moz-linear-gradient(#e13a34, #181818);
    background: -webkit-linear-gradient(#e13a34, #181818);
    background: -o-linear-gradient(#e13a34, #181818);
    background: linear-gradient(#e13a34, #181818);
	box-shadow: 0 1px 2px #aaa inset;
	-moz-box-shadow: 0 1px 2px #aaa inset;
	-ms-box-shadow: 0 1px 2px #aaa inset;
	-o-box-shadow: 0 1px 2px #aaa inset;
	-webkit-box-shadow: 0 1px 2px #aaa inset;
}
@mixin dropdown-menu-bg{
	background: #e63a35;
	background: -moz-linear-gradient(#e13a34, #181818);
    background: -webkit-linear-gradient(#e13a34, #181818);
    background: -o-linear-gradient(#e13a34, #181818);
    background: linear-gradient(#e13a34, #181818);
}
@mixin logo-position{
	background-repeat: no-repeat;
	background-position: 50% 2px;
	width: 152px;
	height: 58px;
	padding: 0 5px;
}

@mixin logo-fixed{
	background: url(../images/home.png) no-repeat 51px 8px;
	width: 88px;
	height: 41px
}
@mixin logo-fixed-position{
	background-repeat: no-repeat;
	background-position: 0 2px;
	width: 68px;
	height: 41px;
	padding: 0 20px 0 0;
}
