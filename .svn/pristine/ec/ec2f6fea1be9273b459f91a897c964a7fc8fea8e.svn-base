@mixin bg-img{}
@mixin header-menu-bg{
  background: #db0a49;
  background: -moz-linear-gradient(#eb1857, #cd134b);
  background: -webkit-linear-gradient(#eb1857, #cd134b);
  background: -o-linear-gradient(#eb1857, #cd134b);
  background: linear-gradient(#eb1857, #cd134b);
  box-shadow: 0 1px 2px #aaa inset;
}
@mixin dropdown-menu-bg{
	background: #db0a49;
	background: -moz-linear-gradient(#eb1857, #cd134b);
    background: -webkit-linear-gradient(#eb1857, #cd134b);
	background: -o-linear-gradient(#eb1857, #cd134b);
	background: linear-gradient(#eb1857, #cd134b);
}
@mixin logo-position{
	background-repeat: no-repeat;
	background-position: 0 0;
	width: 158px;
	height: 100px;
}

@mixin logo-fixed{
	background: url(../images/home.png) no-repeat 108px 8px;
	width: 135px;
	height: 41px;
	}
@mixin logo-fixed-position{
	background-repeat: no-repeat;
	background-position: 0 0;
	width: 115px;
	height: 41px;
	padding: 0 20px 0 0;
}
@mixin bet-tooltip-visibility{
	opacity: 1;
	left: 0;
}

